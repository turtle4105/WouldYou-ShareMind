<Application x:Class="WouldYou_ShareMind.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:WouldYou_ShareMind.Views"
             xmlns:vm="clr-namespace:WouldYou_ShareMind.ViewModels"
             xmlns:conv="clr-namespace:WouldYou_ShareMind.Converters">
    <Application.Resources>
        
        <!--Converters -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:EqualityMultiConverter x:Key="Eq2"/>

        <!-- =========== Colors / Brushes =========== -->
        <Color x:Key="Clr.Bg">#0B0F1A</Color>
        <Color x:Key="Clr.Panel">#0F1422</Color>
        <Color x:Key="Clr.PanelAlt">#111827</Color>
        <Color x:Key="Clr.Mint">#8ED7D6</Color>
        <Color x:Key="Clr.Purple">#4F24A9</Color>
        <Color x:Key="Clr.LightPurple">#C1BCD2</Color>
        <Color x:Key="Clr.Sky">#6C96AB</Color>
        <Color x:Key="Clr.Gray">#9EA1B5</Color>
        <Color x:Key="Clr.DarkGray">#585868</Color>
        <Color x:Key="Clr.White">#F7F7F7</Color>

        <SolidColorBrush x:Key="Brush.Bg" Color="{StaticResource Clr.Bg}"/>
        <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource Clr.Panel}"/>
        <SolidColorBrush x:Key="Brush.PanelAlt" Color="{StaticResource Clr.PanelAlt}"/>
        <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Clr.White}"/>
        <!-- Opacity는 Brush에 따로 부여 -->
        <Color x:Key="Clr.LightPurpleSubtle">#CCC1BCD2</Color>
        <!-- CC(=80%) + C1BCD2 -->
        <SolidColorBrush x:Key="Brush.TextSubtle" Color="{StaticResource Clr.LightPurpleSubtle}"/>
        <SolidColorBrush x:Key="Brush.Gray" Color="{StaticResource Clr.Gray}"/>
        <SolidColorBrush x:Key="Brush.DarkGray" Color="{StaticResource Clr.DarkGray}"/>
        <SolidColorBrush x:Key="Brush.Mint" Color="{StaticResource Clr.Mint}"/>

        <LinearGradientBrush x:Key="Grad.Accent" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource Clr.Mint}" Offset="0"/>
            <GradientStop Color="{StaticResource Clr.Purple}" Offset="1"/>
        </LinearGradientBrush>

        <!-- 투명도는 GradientStop.Opacity로 -->
        <Color x:Key="Clr.Mint40">#668ED7D6</Color>
        <!-- 0x66(≈40%) + 8ED7D6 -->
        <Color x:Key="Clr.Purple40">#664F24A9</Color>
        <!-- 0x66 + 4F24A9 -->

        <!-- 그라데이션 정의 -->
        <LinearGradientBrush x:Key="Grad.Border" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource Clr.Mint40}"   Offset="0"/>
            <GradientStop Color="{StaticResource Clr.Purple40}" Offset="1"/>
        </LinearGradientBrush>

        <CornerRadius x:Key="Cr.Card">16</CornerRadius>
        <CornerRadius x:Key="Cr.Pill">22</CornerRadius>
        <Thickness x:Key="Th.CardPadding">16</Thickness>

        <!-- =========== Text Styles =========== -->
        <Style x:Key="Txt.Title" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="Txt.Subtitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextSubtle}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="Txt.Body" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- =========== Cards =========== -->
        <Style x:Key="Card.Panel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Brush.Panel}"/>
            <Setter Property="CornerRadius" Value="{StaticResource Cr.Card}"/>
            <Setter Property="Padding" Value="{StaticResource Th.CardPadding}"/>
            <Setter Property="BorderThickness" Value="1.4"/>
            <Setter Property="BorderBrush" Value="{StaticResource Grad.Border}"/>
        </Style>
        <Style x:Key="Card.Editor" TargetType="Border" BasedOn="{StaticResource Card.Panel}">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1.8"/>
        </Style>

        <!-- =========== Buttons =========== -->
        <Style x:Key="Btn.Primary" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Grad.Accent}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="{StaticResource Cr.Pill}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Btn.Secondary" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Background" Value="{StaticResource Brush.PanelAlt}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1.4"/>
            <Setter Property="BorderBrush" Value="{StaticResource Grad.Border}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="{StaticResource Cr.Pill}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 네비 공통 룩 -->
        <Style x:Key="Btn.Nav" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.78"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== Night Accent (dimmer, softer) ===== -->
        <Color x:Key="Clr.Mint.Night">#5FB8B7</Color>
        <!-- 기존 민트보다 채도/밝기 ↓ -->
        <Color x:Key="Clr.Purple.Night">#3D1E85</Color>
        <!-- 보라 톤도 진하고 어둡게 -->
        <!-- 약간 투명한 스탑으로 더 소프트하게 -->
        <LinearGradientBrush x:Key="Grad.Accent.Night" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource Clr.Mint.Night}"   Offset="0.00"/>
            <GradientStop Color="{StaticResource Clr.Purple.Night}" Offset="1.00"/>
        </LinearGradientBrush>

        <!-- 핼로우/글로우도 아주 은은하게 -->
        <SolidColorBrush x:Key="Brush.Primary.Fg.Night" Color="#F0FFFFFF"/>
        <!-- 완전 흰색보다 살짝 톤다운 -->

        <!-- Night 전용 Primary 버튼 -->
        <Style x:Key="Btn.Primary.Night" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource Brush.Primary.Fg.Night}"/>
            <Setter Property="Background" Value="{StaticResource Grad.Accent.Night}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="Effect">
                <!-- 아주 옅은 주변광 -->
                <Setter.Value>
                    <DropShadowEffect Color="#2033D1C8" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="{StaticResource Cr.Pill}" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- 상태(호버/프레스/비활성) -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="{StaticResource Clr.Mint.Night}"   Offset="0" />
                                <GradientStop Color="{StaticResource Clr.Purple.Night}" Offset="1" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <!-- 프레스 시는 명도 살짝 ↓로 눌리는 느낌 -->
                                <GradientStop Color="#53A7A6" Offset="0"/>
                                <GradientStop Color="#371A78" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{StaticResource Brush.PanelAlt}"/>
                    <Setter Property="Foreground" Value="{StaticResource Brush.DarkGray}"/>
                    <Setter Property="Effect" Value="{x:Null}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- =========== DataTemplates =========== -->
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ShareMindViewModel}">
            <views:ShareMindView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SleepModeViewModel}">
            <views:SleepModeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ArchiveViewModel}">
            <views:ArchiveView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingViewModel}">
            <views:SettingView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RecvPopupViewModel}">
            <views:RecvPopupView/>
        </DataTemplate>
    </Application.Resources>
</Application>

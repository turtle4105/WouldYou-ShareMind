<UserControl x:Class="WouldYou_ShareMind.Views.ArchiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="400" d:DesignHeight="750">

    <Grid Margin="20,24,20,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 타이틀 -->
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <!-- 섹션 라벨 -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <!-- 목록 컨테이너 -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- 페이지네이션 -->
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <!-- 흘려보내기 버튼 -->
        </Grid.RowDefinitions>

        <!-- 타이틀 -->
        <TextBlock Grid.Row="0"
                   Style="{StaticResource Txt.Subtitle}"
                   FontSize="16"
                   Margin="0,15,0,20"
                   TextAlignment="Center"
                   Text="잠시 머문 마음을 고를게요."/>



        <!-- 목록 (가로 스크롤 금지 + 고정 높이) -->
        <ListView Grid.Row="4"
          ItemsSource="{Binding Items}"
          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
          Background="Transparent" BorderThickness="0"
          Margin="0,-10,0,0"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          MinHeight="350" MaxHeight="350"
          SelectionMode="Single">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <!-- 줄 간격은 구분선으로 처리 -->
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#18202F"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- 한 항목 -->
                    <DockPanel LastChildFill="True">
                        <!-- 구분선: 항상 '아래'에 붙임 -->
                        <Border DockPanel.Dock="Bottom"
                    Height="1"
                    Background="{StaticResource Grad.Border}"
                    Opacity="0.45"/>

                        <!-- 본문: 줄-사이의 가운데에 오도록 고정/최소 높이 부여 -->
                        <Grid Height="64" VerticalAlignment="Center"  Margin="0,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- 점 -->
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <!-- 텍스트 -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- 보기 버튼 -->
                            </Grid.ColumnDefinitions>

                            <!-- 점 -->
                            <Image Grid.Column="0"
                       Source="/Resources/images/dot.png"
                       Width="14" Height="14"
                       VerticalAlignment="Center">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="0.45"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>

                            <!-- 제목 + 날짜 -->
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}"
                               Style="{StaticResource Txt.Body}"
                               FontWeight="SemiBold"
                               TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding DateText}"
                               Style="{StaticResource Txt.Subtitle}"
                               FontSize="12"/>
                            </StackPanel>

                            <!-- 보기 (상세 열기) -->
                            <Button Grid.Column="3"
                        Style="{StaticResource Btn.Secondary}"
                        Padding="10,4" FontSize="12"
                        VerticalAlignment="Center"
                        Command="{Binding DataContext.OpenDetailCommand,
                                          RelativeSource={RelativeSource AncestorType=ListView}}"
                        CommandParameter="{Binding}">
                                보기
                            </Button>
                        </Grid>
                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        <!-- 페이지네이션 -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource Btn.Nav}"
                    Command="{Binding PrevPageCommand}">
                <TextBlock Text="&lt; 이전" Style="{StaticResource Txt.Body}" />
            </Button>

            <!-- 가운데 숫자들: 좌우 버튼과도 떨어지고, 각 숫자끼리도 간격 -->
            <ItemsControl Grid.Column="1"
              ItemsSource="{Binding PageNumbers}"
              Margin="20,0">
                <!-- Prev/Next와 거리 -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- ★ 각 항목(ContentPresenter)에 간격 부여 -->
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Margin" Value="6,0"/>
                        <!-- 숫자 사이 간격 -->
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource Btn.Nav}"
                    Padding="6,2"
                    Command="{Binding DataContext.GoToPageCommand,
                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}">
                            <TextBlock Text="{Binding}" FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource Txt.Body}">
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource Eq2}">
                                                        <Binding Path="DataContext.CurrentPage"
                                                     RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        <Binding/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Foreground" Value="{StaticResource Brush.Mint}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Grid.Column="2" Style="{StaticResource Btn.Nav}"
                    Command="{Binding NextPageCommand}">
                <TextBlock Text="다음 &gt;" Style="{StaticResource Txt.Body}" />
            </Button>
        </Grid>

        <!-- 흘려보내기 버튼 -->
        <Button Grid.Row="8" Height="40"
        Style="{StaticResource Btn.Primary.Night}"
        Command="{Binding ReleaseSelectedCommand}"
        Margin="0,35,0,0"
        MinWidth="200" Padding="12,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="✦" Margin="0,0,6,0"/>
                <TextBlock Text="흘려보내기" FontSize="15"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
